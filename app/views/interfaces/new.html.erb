<%= render 'shared/header' %>
<h2>New Interface</h2>
<%= form_with(model: @interface) do |form| %>
    <% if @interface.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@interface.errors.count, "error") %> prohibited this interface from being saved:</h2>

        <ul>
          <% @interface.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :device_id, style: "display: block" %>
      <%= form.collection_select :device_id, Device.all, :id, :name, selected: @device_id %>
    </div>

    <div>
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name %>
    </div>

    <div>
      <%= form.label :description, style: "display: block" %>
      <%= form.text_area :description  %>
    </div>

    <div>
      <%= form.label :ipaddr, style: "display: block" %>
      <%= form.text_field :ipaddr %>
    </div>

    <div data-controller="interface">
      <div>
        <%= form.label :device, style: "display: block" %>
        <%= form.collection_select :id, Device.all, :id, :name, {}, { data: { action: "load@document->interface#change change->interface#change" } } %>
      </div>

      <div>
        <%= form.label :peer_interface_id, style: "display: block" %>
        <%= form.select :peer_interface_id, [], {}, { data: { interface_target: "peerInterfaces" } } %>
      </div>
    </div>

    <div>
      <%= form.submit "Create device" %>
    </div>
  <% end %>